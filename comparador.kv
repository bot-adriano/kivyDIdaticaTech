<Comp>:
    orientation:'vertical'
    padding:20
    Label:
        text:'Insira o preço e o peso em gramas dos produtos'
        font_size:20
        text_size:self.size
    BoxLayout:

        Label:
            text: 'Produto 1'
        Label:
            text: 'kg ou L'
        Label:
            text:'TotalR$:'
    BoxLayout:
        spacing:10
        TextInput:
            id:preco1
            multiline:False
            input_filter:'float'
        TextInput:
            id:peso1
            multiline:False
            input_filter:'float'
        Label:
            id:prod1

    BoxLayout:

        Label:
            text: 'Produto 2'
        Label:
            text: 'kg ou L'
        Label:
            text:'TotalR$:'
    BoxLayout:
        spacing:10
        TextInput:
            id:preco2
            multiline:False
            input_filter:'float'
        TextInput:
            id:peso2
            multiline:False
            input_filter:'float'
        Label:
            id:prod2
            font_size:20

    BoxLayout:
        spacing:10
        Label:
            text:'Diferença:'
            font_size:20
        Label:
            id:dif
            fonts_size:20
    Button:
        text:'COMPARAR'
        on_release: root.calc()




